#!/bin/bash

# 检查是否传入了参数
if [ $# -eq 0 ]; then
    echo "请传入参数：'q' 或 'w'"
    exit 1
fi

# 生成带时间戳的文件名
recording_name="recording_$(date +'%Y-%m-%d_%H-%M-%S').mp4"
output_dir="/home/liu/Media/Videos/recording"
output_file="${output_dir}/${recording_name}"

# 根据参数执行不同的命令
case "$1" in
q)
    echo "正在录制选定区域..."
    # wl-screenrec -g "$(slurp)" --low-power off --codec av1 --audio --audio-codec flac --filename "$output_file" &
    wl-screenrec -g "$(slurp)" --filename "$output_file" >/dev/null 2>&1
    ;;
e)
    echo "正在录制整个屏幕..."
    # wl-screenrec --low-power off --codec av1 --audio --audio-codec flac --filename "$output_file" &
    wl-screenrec --filename "$output_file" >/dev/null 2>&1
    ;;
w)
    echo "正在选择应用窗口..."
    # 使用 hyprctl 获取应用窗口的几何信息
    window_info=$(hyprctl activewindow -j)
    if [ -z "$window_info" ]; then
        echo "未找到活动窗口！"
        exit 1
    fi

    # 解析窗口的几何信息
    x=$(echo "$window_info" | jq '.at[0]')
    y=$(echo "$window_info" | jq '.at[1]')
    width=$(echo "$window_info" | jq '.size[0]')
    height=$(echo "$window_info" | jq '.size[1]')

    # 格式化几何信息
    geometry="${x},${y} ${width}x${height}"

    echo "正在录制应用窗口：$geometry"
    # wl-screenrec -g "$geometry" --low-power off --codec av1 --audio --audio-codec flac --filename "$output_file" &
    wl-screenrec -g "$geometry" --filename "$output_file" >/dev/null 2>&1
    ;;
*)
    echo "无效参数：请传入 'q' 或 'w'"
    exit 1
    ;;
esac

# 保存进程 ID 到文件
echo $! >/tmp/wl-screenrec.pid
echo "录制已启动，进程 ID：$!"
echo "录制文件将保存为：$output_file"
